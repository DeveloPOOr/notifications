<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="org.tinkoff.notifications.dao.UserDao">
    <resultMap id="UserMap" type="User">
        <result property="id" column="u_id"/>
        <result property="username" column="u_username"/>
        <result property="password" column="u_password"/>
        <collection property="roles" ofType="Role" javaType="java.util.HashSet">
            <id property="id" column="r_id"/>
            <result property="name" column="r_name"/>
        </collection>
    </resultMap>

    <select id="findByName" resultType="User">
        SELECT u.id       AS u_id,
               u.username AS u_username,
               u.password AS u_password,
               r.id       AS r_id,
               r.name     AS r_name
        FROM user u
                 JOIN user_roles ur ON ur.user_id = u.id
                 JOIN roles r ON r.id = ur.role_id
    </select>

    <insert id="save">
        INSERT INTO user (username, password, employee_id)
        VALUES (#{user.username}, #{user.password}, #{employee.id})
    </insert>


</mapper>
